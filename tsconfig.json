{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types"
        ],
    },
    "include": [
        "app/js/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}